package com.example.tcpclient;

import org.json.JSONObject;

public class TransferData {
	public String CommandType;
	public String Parameter;

	public String ToJson() {
		return new JSONObject().put("CommandType", CommandType)
				.put("Parameter", Parameter).toString();
	}

	public TransferData FromJson(String dataToDeserialize) {

		TransferData transferData = new TransferData();

		JSONObject jsonObject = new JSONObject(dataToDeserialize);
		transferData.CommandType = jsonObject.get("CommandType").toString();
		transferData.Parameter = jsonObject.get("Parameter").toString();
		return transferData;
	}

}
